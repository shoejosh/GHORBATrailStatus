<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    
    <style name="TrailStatusHeader">
        <item name="android:background">@color/widget_header_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>    
    </style>
    
    <style name="TrailStatusHeader.Widget">
        <item name="android:background">@drawable/widget_header</item>
    </style>
    
    
    <style name="TrailStatusTitle">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>        
        <item name="android:text">@string/widget_title</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TrailStatusRefresh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/navigation_refresh</item>
        <item name="android:background">@drawable/refresh_button_selector</item>    
        <item name="android:contentDescription">Refresh</item>
    </style>
    
    <style name="TrailStatusLastUpdated">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>  
        <item name="android:layout_toLeftOf">@id/btnRefresh</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="TrailStatusList">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">0dp</item>
	    <item name="android:layout_marginTop">0dp</item>
	    <item name="android:divider">#ccc</item>
	    <item name="android:dividerHeight">1.5dp</item>
	    <item name="android:fadingEdgeLength">0dp</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:drawSelectorOnTop">true</item>
    </style>
    
    <style name="HorizontalLine">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">#33B5E5</item>
        <item name="android:layout_weight">0</item>
    </style>
    
</resources>